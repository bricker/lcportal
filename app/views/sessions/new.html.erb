<%= form_tag sessions_path, :id => "login" do %>
  <fieldset>
    <legend>Login</legend>

    <div class="control-group">
      <%= label_tag :email, "E-mail", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, nil, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
	    <%= label_tag :password, nil, :class => 'control-label' %>
	    <div class="controls">
	      <%= password_field_tag :password, nil, :class => 'text_field' %>
	    </div>
		<label class="checkbox">
			<%= check_box_tag :remember_me %> Remember Me
		</label>
    </div>

    <div class="form-actions">
		<%= submit_tag nil, :class => 'btn btn-primary' %>
		<%= link_to "Forgot Password?", new_password_reset_path, id: "forgot_password", :class => "btn" %>
    </div>
  </fieldset>
<% end %>
