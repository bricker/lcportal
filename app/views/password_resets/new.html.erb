<%= form_tag password_resets_path, :id => "forgot_password", :class => 'form-horizontal' do %>
  <fieldset>
	<legend>Request Password Reset</legend>

    <div class="control-group">
      <%= label_tag :email, "E-mail", :class => 'control-label' %>
      <div class="controls">
        <%= text_field_tag :email, nil, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag nil, :class => 'btn btn-primary' %>
	  <%= link_to "Cancel", login_path, :class => "btn" %>
    </div>
  </fieldset>
<% end %>

<p>
	If you don't remember your e-mail or are still having issues, please contact <a href="mailto:<%= Config["company"]["email"] %>"><%= Config["company"]["email"] %></a>
</p>